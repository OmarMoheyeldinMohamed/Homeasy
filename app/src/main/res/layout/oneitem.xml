<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">


    <TextView
        android:layout_width="200dp"
        android:id="@+id/workerName"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ratingpic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/workerName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/ratingtext"
        android:layout_toEndOf="@+id/ratingpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workerName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Rating"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/pricepic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ratingtext"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/examMessage"
        android:layout_toEndOf="@+id/pricepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingtext"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Price"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>


</RelativeLayout>
